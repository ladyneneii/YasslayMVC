@using YasslayMVC.Controllers;
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>ConfessID</th>
        <th>UserID</th>
        <th>Relationship</th>
        <th>Message</th>
        <th>Recipient's Last Name</th>
        <th>Recipient's First Name</th>
        <th>Gift</th>
        <th></th>
    </tr>
    @for (var i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
            <td>
                <a href="@Url.Action("Edit","Confessions",new {@ConfessID=@Model.Rows[i][0],@id=@ViewBag.LinkableId })">Edit</a>
                <a href="@Url.Action("Delete","Confessions",new {@ConfessID=@Model.Rows[i][0],@id=@ViewBag.LinkableId })">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create","Confessions",new {@id=@ViewBag.LinkableId })">Write a Confession!</a>
