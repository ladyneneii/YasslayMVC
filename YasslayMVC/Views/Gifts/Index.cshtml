@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>GiftID</th>
        <th>GiftName</th>
        <th>Price</th>
        <th>QuantityLeft</th>
        <th>Status</th>
        <th></th>
    </tr>
    @for (var i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>
                <a href="@Url.Action("Edit","Gifts",new {@id=@Model.Rows[i][0] })">Edit</a>
                <a href="@Url.Action("Delete","Gifts",new {@id=@Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create","Gifts")">Add a Gift</a>
